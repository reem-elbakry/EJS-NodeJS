<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet"> 
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<section class="text-gray-600 body-font">
      <div class="flex flex-wrap -m-4">
        <% if(articles != null){ %>
        <% articles.forEach(function(article, index){ %>
        <div class="xl:w-1/3 md:w-1/2 p-4">
          <div class="bg-white p-6 rounded-lg">
            <!-- <a href="/article/<%= article.id %>" > -->
                <% if(article.media.length !== 0){ %>
                <% article.media.forEach(function(artcle, index){ %>
                <img src="<%=  artcle['media-metadata'][2]['url'] %>" alt="<%= article.title %>">
                <% }) %>
                <%}else{%>
                <img class="lg:h-60 xl:h-56 md:h-64 sm:h-72 xs:h-72 h-72 rounded w-full object-cover object-center mb-6" src="https://kwx2f3rgme1bvul52zzobow3-wpengine.netdna-ssl.com/wp-content/themes/realestate-7/images/no-image.png" alt="not-available-image">
                <%}%>
                <h3 class="tracking-widest text-indigo-500 text-xs font-medium title-font"><%= article.subsection%></h3>
                <h2 class="text-lg text-gray-900 font-medium title-font mb-4"><%= article.title %></h2>
                <p class="leading-relaxed text-base"><%= article.abstract %></p>
            <!-- </a>   -->
        </div>
        </div>
        <% }) %>
        <%}else{%>
      </div>
    </div>
    <img src="https://images.squarespace-cdn.com/content/v1/5bcedfaa65a707df96be0be9/1590102804805-7TNK3DEEF48PFQZSEO84/INCON-ExpertArticle-44-KeyToCreativity-Icon-00.jpg" alt="not-found">
    <%}%>
  </section>
</body>
</html>
